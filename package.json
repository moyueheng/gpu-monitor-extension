{
  "name": "gpu-monitor-extension",
  "displayName": "GPU Monitor",
  "description": "Monitor GPU usage and performance in real-time from VSCode status bar",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpuMonitor.refresh",
        "title": "Refresh GPU Info",
        "icon": "$(refresh)"
      },
      {
        "command": "gpuMonitor.toggle",
        "title": "Toggle GPU Monitoring",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gpuMonitor.refresh",
          "when": "true"
        },
        {
          "command": "gpuMonitor.toggle",
          "when": "true"
        }
      ],
      "statusBarWindow": [
        {
          "command": "gpuMonitor.toggle",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "GPU Monitor",
      "properties": {
        "gpuMonitor.refreshInterval": {
          "type": "number",
          "default": 2000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "GPU信息刷新间隔(毫秒)"
        },
        "gpuMonitor.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "在状态栏显示GPU信息"
        },
        "gpuMonitor.showPercentage": {
          "type": "boolean",
          "default": true,
          "description": "显示GPU使用率百分比"
        },
        "gpuMonitor.showTemperature": {
          "type": "boolean",
          "default": true,
          "description": "显示GPU温度"
        },
        "gpuMonitor.showMemoryUsage": {
          "type": "boolean",
          "default": true,
          "description": "显示GPU内存使用情况"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "gpu",
    "monitor",
    "nvidia",
    "amd",
    "apple silicon",
    "m1",
    "m2",
    "m3",
    "macos",
    "performance",
    "status bar"
  ],
  "publisher": "moyueheng",
  "author": "moyueheng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moyueheng/gpu-monitor-extension.git"
  },
  "bugs": {
    "url": "https://github.com/moyueheng/gpu-monitor-extension/issues"
  },
  "homepage": "https://github.com/moyueheng/gpu-monitor-extension#readme"
}
